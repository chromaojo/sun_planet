<div class="pagetitle">
  <h1>Dashboard - Properties</h1> <br>
</div><!-- End Page Title -->

<section class="section dashboard">
  <div class="row">

    <!-- Left side columns -->
    <div class="col-lg-8">
      <div class="row overflow-auto" style="height: 109vh;">

        <!-- Sales Card -->

        <% if (userProp=='' ) { %>
          <br> <br>
          <h3 class="m-5 text-center mb-5">There is no property at the moment</h3>

          <% } else{%>
            <% userProp.forEach(trans=> { %>

              <div class="col-xxl-6 col-xl-12">
                <!-- /assets/img/card.jpg -->

                <a href="/user/property-zZkKqQP/<%= trans.id %>" class="text-dark">
                  <div class="card">
                    <div class="container-fluid"> <br>
                      <% if (trans.picture) { %>
                        <% let pixz=trans.picture.split(',') %>

                          <img src="<%= pixz ? '/prop/'+pixz[0] : '/assets/img/card.jpg' %>" class="d-block w-100"
                            alt="Property Image">

                          <% } %>
                    </div>
                    <div class="card-body mt-2">
                      <h5 class="card-title">
                        <b>
                          <%= trans.title.substring(0, 21)+( trans.title.length>21?'...': "") %>
                        </b>
                      </h5>
                      <h6 class="card-subtitle mb-2 text-muted"><span><br>
                          <%= new Date(trans.created_at).toLocaleString('en-GB',{year : 'numeric' , month:'short', day
                            :'2-digit'}) %> ||
                            <%= new Date(trans.created_at).toLocaleTimeString() %>
                        </span></h6>
                      <p class="card-text mb-3 text-capitalize">
                        <%= trans.category %> Property.
                      </p>
                      <p class=" text-capitalize">Location : <%= trans.location %>
                      </p>

                      <a href="/user/save/<%= trans.prop_id %>" class="btn btn-primary btn-sm">Archive</a>
                      <a href="#" class="card-link">Another link</a>
                    </div>

                  </div>
                </a>

              </div><!-- End Customers Card -->

              <% }) %>
                <% } %>

      </div>
    </div><!-- End Left side columns -->


    <!-- Right side columns -->
    <div class="col-lg-4">

      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Filter Properties<span>| This Month</span></h5>

          <a href="/user/dashbord/comm" class="text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-compass"></i>
              </div>
              <div class="ps-3">
                <h5>Commercial </h5>
              </div>
            </div>
          </a>

          <a href="/user/dashbord/lease" class="text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-compass"></i>
              </div>
              <div class="ps-3">
                <h5>For Lease </h5>
              </div>
            </div>
          </a>

          <a href="/user/dashbord/rent" class="text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-compass"></i>
              </div>
              <div class="ps-3">
                <h5>For Rent </h5>
              </div>
            </div>
          </a>

          <a href="/user/dashbord/sale" class="text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-compass"></i>
              </div>
              <div class="ps-3">
                <h5>For Sale </h5>
              </div>
            </div>
          </a>

          <a href="/user/dashbord/res" class="text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-compass"></i>
              </div>
              <div class="ps-3">
                <h5>Residential </h5>
              </div>
            </div>
          </a>
          <a href="/user/dashbord/shortlet" class="text-dark">
            <div class="d-flex align-items-center mb-3">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-compass"></i>
              </div>
              <div class="ps-3">
                <h5>Shortlets </h5>
              </div>
            </div>
          </a>


        </div>

      </div><!-- End Revenue Card -->

      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Archive <span>| This Month</span></h5>
          <a href="/user/saved">
            <div class="d-flex align-items-center">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-folder"></i>
              </div>
              <div class="ps-3">
                <h6>Archive</h6>
                <span class="text-success small pt-1 fw-bold">Click |</span> <span class="text-muted small pt-2 ps-1">|
                  Check</span>

              </div>
            </div>
          </a>
        </div>
      </div>

      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Investment <span>| This Month</span></h5>
          <a href="/user/investments">
            <div class="d-flex align-items-center">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-briefcase-fill"></i>
              </div>
              <div class="ps-3">
                <h6>Investment</h6>
                <span class="text-success small pt-1 fw-bold">Click |</span> <span class="text-muted small pt-2 ps-1">|
                  Check</span>

              </div>
            </div>
          </a>
        </div>
      </div>

    </div><!-- End Right side columns -->

  </div>
</section>