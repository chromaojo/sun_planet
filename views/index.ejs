<div class="pagetitle">
  <h1>Property Listing</h1> <br>
</div><!-- End Page Title -->

<section class="section dashboard">
  <div class="row">

    <!-- Left side columns -->
    <div class="col-lg-8">
      <div class="container-fluid overflow-auto" style="height: 147vh;">

    
        <% if (userProp=='' ) { %>
          <br> 
          <h3 class="m-5 text-center mb-2">There is no property at the moment</h3>
    
          <% } else{%>
            <% userProp.forEach(trans=> { %>
    
              <div class="col-xxl-6 col-xl-12">
                  
                  <div class="card info-card sales-card">
                    <div class="filter">
                      <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                          <h6>Option</h6> <hr>
                        </li>

                        <li><a class="dropdown-item" href="/user/save/<%= trans.prop_id %>">Add To Archive</a></li>
                        <li><a class="dropdown-item" href="/user/apply-rent/<%= trans.id %>">Apply</a></li>
                        
                      </ul>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-capitalize"><%= trans.property_type %><span> |  <%= new Date(trans.created_at).toLocaleString('en-GB',{year : 'numeric' , month:'short', day
                        :'2-digit'}) %> ||
                        <%= new Date(trans.created_at).toLocaleTimeString() %>
                    </span></h6></span></h5>
    
                      <div class="d-flex align-items-center">
                        <a href="/user/save/<%= trans.prop_id %>" class="btn ">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                          <i class="bi bi-exclude"></i>    
                        </div></a>
                        <a href="/user/property-zZkKqQP/<%= trans.id %>" class="text-dark">
                        <div class="ps-3">
                          <h6>
                            <%= trans.property_name.substring(0, 30)+( trans.property_name.length>30?'...': "") %>
                          </h6>
                          <span class="text-success small pt-1 fw-bold"><%= trans.city %> , <%= trans.state %> </span> <span class="text-muted small pt-2 ps-1">
                            <%= trans.rent_price %> NGN
                          </span>
    
                        </div>
                      </a>
                      </div>
                    </div>
    
                  </div>
              </div><!-- End Customers Card -->
              <% }) %>
              <% } %>
    
      </div>
    </div><!-- End Left side columns -->


    <!-- Right side columns -->
    <div class="col-lg-4">
      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Filter <span>| Properties</span></h5>
        
            <form class=" align-items-center" method="POST" action="/user/filter110">
              <div class="d-flex ">
                <select class="form-select" aria-label="Default select example" name="filter">
                  <option selected>Filter Properties </option> <hr>
                  <option value="apartment">Apartment</option>
                  <option value="condo">Condo</option>
                  <option value="detached_house">Detached_house</option>
                  <option value="duplex">Duplex</option>
                  <option value="flat">Flat</option>
                  <option value="terrace">Terrace</option>
                </select>
                <button type="submit" title="Search" class="btn btn-light"><i class="bi bi-search"></i></button>
              </div>
            </form>
        </div>
      </div><!-- End Revenue Card -->

      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Archive <span>| Property</span></h5>
          <a href="/user/saved">
            <div class="d-flex align-items-center">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-folder"></i>
              </div>
              <div class="ps-3">
                <h6>Archive</h6>
                <span class="text-success small pt-1 fw-bold">Click |</span> <span class="text-muted small pt-2 ps-1">|
                  Check</span>

              </div>
            </div>
          </a>
        </div>
      </div>

      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Investment <span>| Sun Invest</span></h5>
          <a href="/user/investments">
            <div class="d-flex align-items-center">
              <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                <i class="bi bi-briefcase-fill"></i>
              </div>
              <div class="ps-3">
                <h6>Investment</h6>
                <span class="text-success small pt-1 fw-bold">Click |</span> <span class="text-muted small pt-2 ps-1">|
                  Check</span>

              </div>
            </div>
          </a>
        </div>
      </div>

    </div><!-- End Right side columns -->

  </div>
</section>