<div class="container p-2">
    <% if (userProp.id==null) { %>
        <br> <br>
        <h3 class="m-5 text-center mb-5">There is no recorded property at the moment</h3>
        <% } else{%>
            <div class="card info-card customers-card">

                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Details</h6>
                            <hr>
                        </li>

                        <li><a class="dropdown-item" href="#"><i class="bi bi-calendar-week"></i>: <%= new
                                    Date(userProp.created_at).toLocaleString('en-GB',{year : 'numeric' , month:'short',
                                    day :'2-digit'}) %> ||
                                    <%= new Date(userProp.created_at).toLocaleTimeString() %></a>
                        </li>
                        <li>
                            <a href="/user/save/<%= userProp.id %>" class="dropdown-item"> <i
                                    class="bi bi-folder-plus"></i>Archive It</a>
                        </li>
                        <li><a class="dropdown-item" href="#">Location : <%= userProp.location %></a></li>
                    </ul>
                </div>

                <div class="card-body">
                    <h5 class="card-title text-center"> <b class="text-capitalize">Title :
                        <%= userProp.title %>
                    </b></h5>


                    <div class="row">

                        <div class="col text-end">

                           <!-- Slides with indicators -->
                           <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            
                            <div class="carousel-inner">
                                <% if (userProp.picture) { %>
                                    <% let pixz = userProp.picture.split(',') %>
                                    
                                    <div class="carousel-item active" style="width: 790px; height: 390px;">
                                        <a href="/prop/<%= pixz[0] %>">
                                         <img src="/prop/<%= pixz[0] %>" class="d-block w-100" alt="Product Image">
                                        </a>
                                     </div>
                                     <% let num = 0 %>
                                     <% if (pixz.length > num) { %>
                                        <% const pizzy = pixz.splice(1) %>
                                        <% pizzy.forEach(trans=> { %>
                                            <div class="carousel-item" style="width: 790px; height: 390px;">
                                                <a href="/prop/<%= trans %>">
                                                 <img src="<%= trans ? '/prop/'+trans : '/assets/img/card.jpg' %>" class="d-block w-100" alt="Product Image">
                                                </a>
                                             </div>
                                        <% }) %>
                                    <% } %>
                                     
                                    
                                 
                                <% } %>
                                                                
                            </div>

                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>

                        </div><!-- End Slides with indicators --> <br>
                        </div>
                        <div class="col-lg-3 mb-3">
                           
                            <h5 class="card-title mt-3">Location : <span>
                                    <%= userProp.location %>
                                </span></h5>
                            <h5 class="card-title mt-3 text-capitalize">property category : <span>
                                    <%= userProp.category %>
                                </span></h5>
                            <h5 class="card-title"> Price :<span>
                                    <%= userProp.price %> NGN
                                </span></h5>

                            <h5 class="card-title"> <span>Created - <%= new
                                        Date(userProp.created_at).toLocaleString('en-GB',{year : 'numeric' ,
                                        month:'short', day :'2-digit'}) %></span></h5>
                        </div>


                    </div>
                    <div class="d-flex align-items-center">

                        <div class="ps-3">
                            <% if (userProp.description) { %>
                                <% userProp.description.split('\n').forEach(function(line) { %>
                                    <% if (line.trim()) { %>

                                        <%- line %>

                                            <% } %>
                                                <% }); %>
                                                    <% } %> <br>

                        </div>

                    </div>


                    <% } %>
                </div>

            </div><!-- End Customers Card -->


</div>