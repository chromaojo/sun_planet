  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Form Summary</h5>

      <!-- Table with hoverable rows -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Property Name <i class="bi bi-pen me-1 text-info"></i></th>
            <th scope="col">Type</th>
            <th scope="col">Occupant</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Next Of Kin</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% userRent.forEach(trans=> { %>
            <tr>
              <th scope="row">
                <%= counter++ %>
              </th>
              <td>
                <a href="/user/renter/<%= trans.id %>" class="text-dark ">
                  <%= trans.property_name %>
                </a>
              </td>
              <td>
                <a href="/user/renter/<%= trans.id %>" class="text-dark text-capitalize">
                  <%= trans.property_type %>
                </a>
              </td>
              <td>
                <a href="/user/renter/<%= trans.id %>" class="text-dark text-capitalize">
                  <%= trans.occupant_name %>
                </a>
              </td>
              <td>
                <a href="/user/renter/<%= trans.id %>" class="text-dark text-capitalize">
                  <%= trans.occupant_phone %>
                </a>
              </td>
              <td>
                <a href="/user/renter/<%= trans.id %>" class="text-dark text-capitalize">
                  <%= trans.next_of_kin %>
                </a>
              </td>
              <td>
                <a href="/user/renter/<%= trans.id %>" class="text-dark text-capitalize">
                  <%= trans.status %>
                </a>
              </td>

            </tr>
            <% }) %>
          
        </tbody>
      </table>
      <!-- End Table with hoverable rows -->

    </div>
  </div>
</div>