<% let counter = 1; %>
<section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Users Details</h5>
            <p class="text-capitalize">Every User can be seen on this section. Password and roles can be editted</p>

            <!-- Table with stripped rows -->
            <table class="table datatable">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  
                  <th scope="col">Email</th>
                  <th scope="col">Role</th>
                  <th scope="col">Password Reset</th>
                </tr>
              </thead>
              <tbody>
                
                <% userAll.forEach(trans=> { %>
                    <tr> 
                        <th scope="row"><%= counter++ %></th>
                        <td>
                            <a href="/admin/uzer/<%= trans .user_id %>" class="text-dark ">
                                <%= trans.email %>
                            </a>
                        </td>
                        <td>
                           <a href="/admin/uzer/<%= trans.user_id %>" class="text-dark text-capitalize">
                            <%= trans.role %>
                           </a>
                        </td>
                        <td>
                            <a href="">
                                <span>*************</span>
                            </a>
                        </td>
                    </tr>

                <% }) %>
                
              </tbody>
            </table>
            <!-- End Table with stripped rows -->

          </div>
        </div>

      </div>
    </div>
  </section>