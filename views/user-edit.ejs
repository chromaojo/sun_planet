<div class="container-fluid register d-flex">
    <div class="container">
        <div class="row" data-aos="fade-up">
            <div class="col-md-2"></div>
            <div class="col-md-9 p-5 ">
                <!-- Add A Carousel for the form  -->
                <h1 class="mb-3 text-center"> <b>User's Role Allocation</b></h1>
                <h3 class="mb-5 text-center"><small>Edit User Role</small> </h3>
                <div class="container">
                    <div class="card border p-4">
                        <form action="/admin/<%= userOne.user_id %>/edit" method="POST">
                            <div class="form-group">
                                <span>Email Address:</span>
                                <input type="text" class="form-control" value=" Email : <%= userOne.email %>">
                            </div>
                            <div class="form-group">
                                <span>Role :</span> <i class="text-capitalize"><%= userOne.role %></i>
                                <select name="role" id="" class="form-select">
                                    <option value=""></option>
                                    <option value="admin">Administrator</option>
                                    <option value="client">Client</option>
                                    <option value="staff">Staff</option>
                                </select> <br>
                            </div>
                            <button type="submit" class="btn btn-outline-primary w-100">Done</button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
