<div class="pagetitle">
  <h1>Profile</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
      <li class="breadcrumb-item active">Profile</li>
    </ol>
  </nav>
</div><!-- End Page Title -->

<section class="section profile">
  <div class="row">
    <div class="col-xl-4">

      <div class="card">
        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
          <a href="<%= userData.profilePix?userData.profilePix: "/assets/img/profile-img.jpg" %>">
            <img src="<%= userData.profilePix?userData.profilePix: "/assets/img/profile-img.jpg" %>" alt="Profile" class="rounded-circle" >
          </a>
          <h2>
            <%= userData.surname %>
              <%= userData.othername %>
          </h2>
          <h3>
            @ <%= userData.username %>
          </h3>
          <div class="social-links mt-2">
            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
          <h5 class="card-title">About</h5>
          <p class="small fst-italic"><%- userData.about %></p>
        </div>
      </div>

    </div>

    <div class="col-xl-8">

      <div class="card">
        <div class="card-body pt-3">
          <!-- Bordered Tabs -->
          <ul class="nav nav-tabs nav-tabs-bordered">

            <li class="nav-item">
              <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
            </li>

            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
            </li>

            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Settings</button>
            </li>

            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change
                Password</button>
            </li>

          </ul>
          <div class="tab-content pt-2">

            <div class="tab-pane fade show active profile-overview" id="profile-overview">

              <div class="row">
                <div class="card p-3">
                  <div class="card-body">
                    <h5 class="card-title">Account Details</h5>

                    <!-- List group With Icons -->
                    <ul class="list-group">
                      <li class="list-group-item text-capitalize"><i class="bi bi-pen me-1 text-info"></i> Name : <%-
                          userData.surname %> <%- userData.othername %> </li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-bank me-1 text-success"></i> Account
                        Id : <%- userData.account_id %></li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-cash me-1 text-success"></i> Account
                        Balance : <%- userData.account_balance %> NGN</li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-cash-stack me-1 text-success"></i>
                        Total Amount : <%- userData.total_spent %> NGN</li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-house-fill me-1 text-primary"></i>
                        Address : <%- userData.address %> </li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-phone me-1 text-success"></i> Phone
                        Number : <%- userData.phone_number %> </li>
                      <li class="list-group-item"><i class="bi bi-envelope me-1 text-success"></i> Email
                        : <%- userData.email %> </li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-whatsapp me-1 text-success"></i>
                        Whatsapp : <%- userData.whatsapp %></li>
                      <li class="list-group-item text-capitalize"><i
                          class="bi bi-star me-1 text-capitalize text-info"></i> Account Type : <%-
                          userData.userData_type %>
                      </li>

                      <li class="list-group-item text-capitalize"><i class="bi bi-instagram me-1 text-success"></i>
                        instagram : <%- userData.instagram %></li>
                      <li class="list-group-item text-capitalize"><i class="bi bi-linkedin me-1 text-success"></i>
                        Linkedin : <%- userData.linkedin %></li>
                    </ul><!-- End List group With Icons -->

                  </div>
                </div>

              </div>

            </div>

            <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

              <!-- Profile Edit Form -->

              <div class="row mb-3">
                <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                <div class="col-md-8 col-lg-9">
                  <img src="<%= userData.profilePix?userData.profilePix: "/assets/img/profile-img.jpg" %>" alt="Profile" class="rounded-circle" >
    
                  <div class="pt-2">

                    <% if (userData.role==='admin' ) { %>
                      <form action="/admin/edit/upload-pix" method="POST" enctype="multipart/form-data">
                        <% } else { %>
                          <form action="/user/edit/upload-pix" method="POST" enctype="multipart/form-data">
                            <% } %>
                              <input type="file" accept=".jpg, .png, .jpeg" name="profileImage" id="profileImage">
                              <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-upload"></i></button>
                          </form>
                  </div>
                </div>
              </div>

              <div>
                <% if (userData.role==='admin' ) { %>
                  <form action="/admin/edit/surname" method="POST">
                    <% } else { %>
                      <form action="/user/edit/surname" method="POST">
                        <% } %>
                          <div class="row mb-3">
                            <label for="surname" class="col-md-4 col-lg-3 col-form-label">Surname</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="surname" type="text" class="form-control" id="fullName"
                                    placeholder="<%= userData.surname %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-sm btn-primary">Save </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>

              <div>

                <% if (userData.role==='admin' ) { %>
                  <form action="/admin/edit/other" method="POST">
                    <% } else { %>
                      <form action="/user/edit/other" method="POST">
                        <% } %>
                          <div class="row mb-3">
                            <label for="surname" class="col-md-4 col-lg-3 col-form-label">Other Names</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="othername" type="text" class="form-control" id="fullName"
                                    placeholder="<%= userData.othername %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-primary btn-sm">Save </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>

              <div>
                <% if (userData.role==='admin' ) {%>
                  <form action="/admin/edit/address" method="POST">
                    <% } else { %>
                      <form action="/user/edit/address" method="POST">
                        <% } %>

                          <div class="row mb-3">
                            <label for="address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="address" type="text" class="form-control" id="fullName"
                                    placeholder="<%= userData.address %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-primary btn-sm">Save </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>

              <div>
                <% if (userData.role==='admin' ) { %>
                  <form action="/admin/edit/username" method="POST">
                    <% } else { %>
                      <form action="/user/edit/username" method="POST">
                        <% } %>
                          <div class="row mb-3">
                            <label for="username" class="col-md-4 col-lg-3 col-form-label">Username </label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="username" type="text" class="form-control" id="fullName"
                                    placeholder="<%= userData.username %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-sm btn-primary">Save </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>

              <div>
                <% if (userData.role==='admin' ) {%>
                  <form action="/admin/edit/phone_number" method="POST">
                    <% } else { %>
                      <form action="/user/edit/phone_number" method="POST">
                        <% } %>
                          <div class="row mb-3">
                            <label for="phone_number" class="col-md-4 col-lg-3 col-form-label">Phone
                              Number</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="phone_number" type="number" class="form-control" id="fullName"
                                    placeholder="<%= userData.phone_number %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-primary btn-sm">Save
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>
              <div>
                <% if (userData.role==='admin' ) {%>
                  <form action="/admin/edit/instagram" method="POST">
                    <% } else { %>
                      <form action="/user/edit/instagram" method="POST">
                        <% } %>
                          <div class="row mb-3">
                            <label for="instagram" class="col-md-4 col-lg-3 col-form-label">Instagram</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="instagram" type="text" class="form-control" id="fullName"
                                    placeholder="<%= userData.instagram %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-primary btn-sm">Save
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>
              <div>
                <% if (userData.role==='admin' ) {%>
                  <form action="/admin/edit/whatsapp" method="POST">
                    <% } else { %>
                      <form action="/user/edit/whatsapp" method="POST">
                        <% } %>

                          <div class="row mb-3">
                            <label for="whatsapp" class="col-md-4 col-lg-3 col-form-label">Whatsapp
                              Number</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="whatsapp" type="number" class="form-control" id="fullName"
                                    placeholder="<%= userData.whatsapp %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-primary btn-sm">Save
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>
              <div>
                <% if (userData.role==='admin' ) {%>
                  <form action="/admin/edit/facebook" method="POST">
                    <% } else { %>
                      <form action="/user/edit/facebook" method="POST">
                        <% } %>
                          <div class="row mb-3">
                            <label for="facebook" class="col-md-4 col-lg-3 col-form-label">Enter Facebook</label>
                            <div class="col-md-8 col-lg-9">
                              <div class="row">
                                <div class="col-md-10">
                                  <input name="facebook" type="text" class="form-control" id="fullName"
                                    placeholder="<%= userData.facebook %>">
                                </div>
                                <div class="col">
                                  <button type="submit" class="btn btn-primary btn-sm">Save
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>
                      </form>
              </div>
              <div>
                <% if (userData.role==='admin' ) { %>
                  <form action="/admin/edit/about" method="POST">
                    <% } else { %>
                      <form action="/user/edit/about" method="POST">
                        <% } %>

                          <div class="row mb-3">
                            <label for="about" class="col-md-4 col-lg-3 col-form-label">About
                            </label>
                            <div class="col-md-8 col-lg-9">
                              <textarea name="about" class="form-control" id="about"
                                style="height: 100px"> <%- userData.about %></textarea>
                              <button type="submit" class="btn btn-primary btn-sm">Save</button>
                            </div>

                          </div>
                      </form>
              </div>

              <div class="text-center">
                <a class="btn btn-primary" href="/user/profile">Done</a>
              </div>
             
            </div>

            <div class="tab-pane fade pt-3" id="profile-settings">

              <!-- Settings Form -->
              <form>

                <div class="row mb-3">
                  <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Email Notifications</label>
                  <div class="col-md-8 col-lg-9">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="changesMade" checked>
                      <label class="form-check-label" for="changesMade">
                        Changes made to your account
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="newProducts" checked>
                      <label class="form-check-label" for="newProducts">
                        Information on new products and services
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="proOffers">
                      <label class="form-check-label" for="proOffers">
                        Marketing and promo offers
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="securityNotify" checked disabled>
                      <label class="form-check-label" for="securityNotify">
                        Security alerts
                      </label>
                    </div>
                  </div>
                </div>

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
              </form><!-- End settings Form -->

            </div>

            <div class="tab-pane fade pt-3" id="profile-change-password">
              <!-- Change Password Form -->
              <form action="/user/edit/passsword" method="POST">

                <div class="row mb-3">
                  <label for="old_passsword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                  <div class="col-md-8 col-lg-9">
                    <input name="password" type="password" class="form-control" id="currentPassword">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                  <div class="col-md-8 col-lg-9">
                    <input name="newpassword" type="password" class="form-control" id="newPassword">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
                  <div class="col-md-8 col-lg-9">
                    <input name="renewpassword" type="password" class="form-control" id="renewPassword">
                  </div>
                </div>

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
              </form><!-- End Change Password Form -->

            </div>

          </div><!-- End Bordered Tabs -->

        </div>
      </div>

    </div>
  </div>
</section>