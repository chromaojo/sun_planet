<div class="pagetitle">
  <h1>Profile</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
      <li class="breadcrumb-item active">Profile</li>
    </ol>
  </nav>
</div><!-- End Page Title -->

<section class="section profile">
  <div class="row">
    <div class="col-xl-4">

      <div class="card">
        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

          <img src="/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
          <h2>
            <%= userData.surname %>
              <%= userData.othername %>
          </h2>
          <h3>
            <%= userData.email %>
          </h3>
          <div class="social-links mt-2">
            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
          </div>
        </div>
      </div>

    </div>

    <div class="col-xl-8">

      <div class="card">
        <div class="card-body pt-3">
          <!-- Bordered Tabs -->
          <ul class="nav nav-tabs nav-tabs-bordered">

            <li class="nav-item">
              <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
            </li>

            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
            </li>

            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Settings</button>
            </li>

            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change
                Password</button>
            </li>

          </ul>
          <div class="tab-content pt-2">

            <div class="tab-pane fade show active profile-overview" id="profile-overview">
              <h5 class="card-title">About</h5>
              <p class="small fst-italic">Sunt est soluta temporibus accusantium neque nam maiores cumque temporibus.
                Tempora libero non est unde veniam est qui dolor. Ut sunt iure rerum quae quisquam autem eveniet
                perspiciatis odit. Fuga sequi sed ea saepe at unde.</p>

              <h5 class="card-title">Profile Details</h5>

              <div class="row">
                <div class="card bg-light p-3">
                  <div class="col-md-12 p-3  icon-box" data-aos="fade-up">

                    <div class="row">
                      <div class="col mb-3">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-card-checklist"></i> <b class="title"> <a href="">Full Name :</a></b>
                            <b class="description text-dark">
                              <%= userData.surname %>
                                <%= userData.othername %>
                            </b>
                        </div>
                      </div>

                      <div class="col mb-4">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-telephone"></i> <b class="title"> <a href="">Phone Number :</a></b>
                            <b class="description text-dark">
                              <%= userData.phone_number %>
                            </b>
                        </div>
                      </div>
                      <hr>

                    </div>
                    <div class="row">
                      <div class="col mb-4">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-envelope"></i> <b class="title"> <a href="">Email Address :</a></b>
                            <b class="description text-dark">
                              <%= userData.email %>
                            </b>
                        </div>
                      </div>
                      <div class="col mb-3">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-card-checklist"></i> <b class="title"> <a href="">Account Id :</a></b>
                            <b class="description text-dark">
                              <%= userData.account_id %>
                            </b>
                        </div>
                      </div>
                      <hr>
                    </div>
                    <div class="row">
                      <div class="col mb-4">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-pen"></i> <b class="title"> <a href="">Username :</a></b>
                            <b class="description text-dark">
                              <%= userData.username %>
                            </b>
                        </div>
                      </div>
                      <div class="col mb-3">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-map"></i> <b class="title"> <a href="">Address :</a></b> <br>
                            <b class="description text-dark">
                              <%= userData.address %>
                            </b>
                        </div>
                      </div>
                      <hr>
                    </div>
                    <div class="row">
                      <div class="col mb-4">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-envelope"></i> <b class="title"> <a href="">User Role :</a></b>
                            <b class="description text-dark capitalize">
                              Esteemed <%= userData.role %>
                            </b>
                        </div>
                      </div>
                      <div class="col mb-3">
                        <div class="icon"><a href="/user/edit">
                            <i class="bi bi-card-checklist"></i> <b class="title"> <a href="">Account Balance :</a></b>
                            <b class="description text-dark ">
                              <%= userData.account_balance %> NGN
                            </b>
                        </div>
                      </div>
                      <hr>
                    </div>

                  </div>

                </div>
              </div>

            </div>

            <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

              <!-- Profile Edit Form -->
              <form>
                <div class="row mb-3">
                  <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                  <div class="col-md-8 col-lg-9">
                    <img src="/assets/img/profile-img.jpg" alt="Profile">
                    <div class="pt-2">
                      <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i
                          class="bi bi-upload"></i></a>
                      <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i
                          class="bi bi-trash"></i></a>
                    </div>
                  </div>
                </div>

                <form action="/user/edit/surname" method="POST">
                  <div class="row mb-3">
                    <label for="surname" class="col-md-4 col-lg-3 col-form-label">Surname</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="surname" type="text" class="form-control" id="fullName" placeholder="<%= userData.surname %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                <form action="/user/edit/other" method="POST">
                  <div class="row mb-3">
                    <label for="surname" class="col-md-4 col-lg-3 col-form-label">Other Names</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="othername" type="text" class="form-control" id="fullName" placeholder="<%= userData.othername %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                
                <form action="/user/edit/username" method="POST">
                  <div class="row mb-3">
                    <label for="username" class="col-md-4 col-lg-3 col-form-label">Username </label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="username" type="text" class="form-control" id="fullName" placeholder="<%= userData.username %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-sm btn-primary">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                <form action="/user/edit/address" method="POST">
                  <div class="row mb-3">
                    <label for="address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="address" type="text" class="form-control" id="fullName" placeholder="<%= userData.address %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                <form action="/user/edit/phone_number" method="POST">
                  <div class="row mb-3">
                    <label for="phone_number" class="col-md-4 col-lg-3 col-form-label">Phone Number</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="phone_number" type="number" class="form-control" id="fullName" placeholder="<%= userData.phone_number %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                <form action="/user/edit/whatsapp" method="POST">
                  <div class="row mb-3">
                    <label for="whatsapp" class="col-md-4 col-lg-3 col-form-label">Whatsapp Number</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="whatsapp" type="number" class="form-control" id="fullName" placeholder="<%= userData.whatsapp %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                <form action="/user/edit/instagram" method="POST">
                  <div class="row mb-3">
                    <label for="instagram" class="col-md-4 col-lg-3 col-form-label">Instagram</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="instagram" type="text" class="form-control" id="fullName" placeholder="<%= userData.instagram %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                <form action="/user/edit/facebook" method="POST">
                  <div class="row mb-3">
                    <label for="phone_number" class="col-md-4 col-lg-3 col-form-label">Facebook</label>
                    <div class="col-md-8 col-lg-9">
                      <div class="row">
                        <div class="col-md-10">
                          <input name="facebook" type="text" class="form-control" id="fullName" placeholder="<%= userData.facebook %>">
                        </div>
                        <div class="col">
                          <button type="submit" class="btn btn-primary btn-sm">Save </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
                

                <div class="row mb-3">
                  <label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
                  <div class="col-md-8 col-lg-9">
                    <textarea name="about" class="form-control" id="about"
                      style="height: 100px">Sunt est soluta temporibus accusantium neque nam maiores cumque temporibus. Tempora libero non est unde veniam est qui dolor. Ut sunt iure rerum quae quisquam autem eveniet perspiciatis odit. Fuga sequi sed ea saepe at unde.</textarea>
                  </div>
                </div>

               

                <div class="text-center">
                  <a class="btn btn-primary" href="/user/profile">Done</a>
                </div>
              </form><!-- End Profile Edit Form -->

            </div>

            <div class="tab-pane fade pt-3" id="profile-settings">

              <!-- Settings Form -->
              <form>

                <div class="row mb-3">
                  <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Email Notifications</label>
                  <div class="col-md-8 col-lg-9">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="changesMade" checked>
                      <label class="form-check-label" for="changesMade">
                        Changes made to your account
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="newProducts" checked>
                      <label class="form-check-label" for="newProducts">
                        Information on new products and services
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="proOffers">
                      <label class="form-check-label" for="proOffers">
                        Marketing and promo offers
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="securityNotify" checked disabled>
                      <label class="form-check-label" for="securityNotify">
                        Security alerts
                      </label>
                    </div>
                  </div>
                </div>

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
              </form><!-- End settings Form -->

            </div>

            <div class="tab-pane fade pt-3" id="profile-change-password">
              <!-- Change Password Form -->
              <form action="/user/edit/passsword" method="POST">

                <div class="row mb-3">
                  <label for="old_passsword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                  <div class="col-md-8 col-lg-9">
                    <input name="password" type="password" class="form-control" id="currentPassword">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                  <div class="col-md-8 col-lg-9">
                    <input name="newpassword" type="password" class="form-control" id="newPassword">
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
                  <div class="col-md-8 col-lg-9">
                    <input name="renewpassword" type="password" class="form-control" id="renewPassword">
                  </div>
                </div>

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
              </form><!-- End Change Password Form -->

            </div>

          </div><!-- End Bordered Tabs -->

        </div>
      </div>

    </div>
  </div>
</section>